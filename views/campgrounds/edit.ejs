<%include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center">Edit <%= campgrounds.name%></h1>
        <div style="width:30%; margin:0 auto;">
            <form action="/campgrounds/<%=campgrounds._id%>?_method=PUT" method="POST">
                <div class="form-group">
                <input class="form-control" type="text" value="<%=campgrounds.name%>" name="campground[name]">
                </div>
                <div class="form-group">
                <input class="form-control" type="text" value="<%=campgrounds.img%>" name="campground[img]">
                </div>
                <div class="form-group">
                <input class="form-control" type="text" value="<%=campgrounds.desc%>" name="campground[desc]">
                </div>
                <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
                
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
        

    </div>
</div>
<%include ../partials/footer %>