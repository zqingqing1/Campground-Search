<%include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to WeCamp</h1>
            <p>
                WeCamp is for every member to share, find and comment every best campgrounds. Simply use our convenient search to find and comment the ideal campground for you today!
            </p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new"> Add new Campground</a>
            </p>
        </div>
    </header>



    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% campground.forEach(function(cp){ %>
            <div class="col-md-3" "col-sm-6">
                <div class="thumbnail">
                    <img src="<%= cp.img%>" >
                    <div class="caption">
                        <h4><%= cp.name%></h4>
                    </div>
                    <p> 
                        <a href="/campgrounds/<%= cp._id%>" class="btn btn-primary">More info</a>
                    </p>
                </div>
            </div>
        <% }) %>
    </div>

</div>


<%include ../partials/footer %>